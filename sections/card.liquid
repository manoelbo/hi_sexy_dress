<section 
    class="px-lg-12 px-md-4 px-4 mb-{{ section.settings.mb_sm }} mt-{{ section.settings.mt_sm }} pb-{{ section.settings.pb_sm }} pt-{{ section.settings.pt_sm }} mb-lg-{{ section.settings.mb_lg }} mt-lg-{{ section.settings.mt_lg }} pb-lg-{{ section.settings.pb_lg }} pt-lg-{{ section.settings.pt_lg }}  mb-xl-{{ section.settings.mb_xl }} mt-xl-{{ section.settings.mt_xl }} pb-xl-{{ section.settings.pb_xl }} pt-xl-{{ section.settings.pt_xl }}"
    {% if section.settings.bg_gradient != blank %} 
    style="background: {{ section.settings.bg_gradient }}"
    {% else %}
    style="background-color: {{section.settings.bg_color }}"
    {% endif %}
>

    <div class="position-relative zi-1 text-xl-start container">
        <div class=row >
            <div class="col-12 text-center">
            {% for block in section.blocks %}
                {% if block.type == "category" %}
                    <a href=""  onclick="return false;"
                        id="{{ block.settings.id }}"
                        class="btn-category btn rounded-white btn-border btn-border me-2 mb-10 {% if block.settings.active == true %}active{% endif %}" 
                        data-aos="fade-down" 
                        target="{% if block.settings.target == true %}_black{% else %}_self{% endif %}"
                        data-aos-delay="100" >
                        
                         {{ block.settings.category }} 
                     </a>
                {% endif %}
            {% endfor %}
            </div>
        </div>
        <div class="row justify-content-md-center">
            {% for block in section.blocks %}
            {% if block.type == "card" %}
            <div id="{{ block.settings.category_id }}"class="{{ section.settings.layout }} category-card" data-aos="fade-down" data-aos-delay="{{ 100 | times: forloop.index | plus: 10 }}">
                {% if block.settings.url != blank %}    
                <a  href="{{ block.settings.url }} "
                    target="{% if block.settings.target == true %}_black{% else %}_self{% endif %}"
                    class="click-card text-center pb-4 pb-lg-8">
                {% else %}
                <div class="text-center card-top pb-4 pb-lg-8">
                {% endif %}
                    <div 
                        class="content-container  hyper-card {% if block.settings.img == blank %} d-flex align-items-center {% endif %}"
                        
                    >    
                        {% if block.settings.img != blank %}
                            {{ block.settings.img | image_url: width: 600 | image_tag }}
                            {% comment %} <img src="{{ block.settings.img | image_url }}" width="600" height="350" loading="lazy"/> {% endcomment %}
                        {% endif %}

                        <div class="hyper-card-content"> 
                            {% if block.settings.title != blank %}
                                <h1 class="display-8 {% if block.settings.text == blank %} p-0 m-0 {% endif %}">
                                    {{ block.settings.title }}
                                </h1>
                            {% endif %}
                            {% if block.settings.text != blank %}
                            <p class="mt-6 pb-0 fs-7 mb-0">
                                {{ block.settings.text }}                            
                            </p>
                        
                            {% endif %}    
                        </div>
                    </div>
                {% if block.settings.url != blank %}   
                </a>
                {% else %}
                </div>
                {% endif %}
            </div>
        {% endif %}
        {% endfor %}
    </div>
</section>

